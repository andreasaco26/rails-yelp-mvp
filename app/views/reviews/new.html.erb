<!-- app/views/reviews/new.html.erb -->

<div class="container">
  <div class="row pt-4">
    <div class="col-sm-6">
      <h2>Create a Review</h2>
      <div class="mt-4 mb-4">
        <%= simple_form_for [ @restaurant, @review ] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating, collection: 0..5 %>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
        </div>
    </div>
  </div>
</div>
