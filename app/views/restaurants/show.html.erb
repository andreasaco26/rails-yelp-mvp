<div class="container pt-4">
<div class="d-flex flex-row justify-content-between align-items-center">
  <div class = "p-2"><h1><%= @restaurant.name %></h1></div>

  </div>
  <div>
    <p><strong>Address: </strong><%= @restaurant.address %></p>
    <p><strong>Phone number: </strong><%= @restaurant.phone_number %></p>
    <p><strong>Cateogry: </strong><%= @restaurant.category %></p>
  </div>
  <ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= review.rating %></li>
  <% end %>
</ul>

  <hr/>

  <%= link_to '<i class="fa-regular fa-arrow-left"></i> Back to restaurant'.html_safe, restaurants_path, :class => "text-decoration-none" %> |
<%= link_to 'New review', new_restaurant_review_path(@restaurant) %>
</div>
